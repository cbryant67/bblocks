<!DOCTYPE html>
<html class="no-js">
<head>
	<meta charset="utf-8">
  	<title>Building Blocks</title>


	<meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700%7CRaleway:700' rel='stylesheet' type='text/css'>
    <script src="/assets/froala_editor.min.js"></script>
    <script src="/assets/plugins/image.min.js"></script>
    <script src="/assets/modernizr-2.6.2-respond-1.1.0.min.js"></script>

</head>



<body>
	<div class="loader">
    	<div class="spinner">
			<div class="double-bounce1"></div>
			<div class="double-bounce2"></div>
		</div>
    </div>

	<div class="nav-container">
		<nav class="top-bar overlay-bar"  id="NavMenu">
			<div class="container">

				<div class="row utility-menu">
					<div class="col-sm-12">
						<div class="utility-inner clearfix">
							<div class="pull-left">
								<span class="alt-font text-white">
									<% if notice %>
										<%= notice %>
									<% elsif %>
										<%= alert %>
									<% end %>
								</span>									
							</div>
						</div>
					</div>
				</div><!--end of row-->	

				<div class="row nav-menu">
					<div class="col-sm-3 col-md-2 columns">
						<%= link_to root_path, 'data-no-turbolink' => true do %>
							<img class="logo logo-dark" src="/assets/logo-dark.png">
							<img class="logo logo-light" src="/assets/logo-light.png">		
						<%end%>
					</div>
					
					<div class="col-sm-9 col-md-10 columns">
						<ul class="menu">
							<li><%= link_to "Home", root_path, 'data-no-turbolink' => true %>							
							</li>

							<li><%= link_to "About Us", about_path, 'data-no-turbolink' => true %>
							</li>

							<li><%= link_to "Our Work", posts_path, 'data-no-turbolink' => true %>
							</li>

							<li><%= link_to "Support Us", '/donate','data-no-turbolink' => true %>
							</li>

							<li><%= link_to "Contact", '/contact', 'data-no-turbolink' => true %>
							</li>

							<% if user_signed_in? %>
								<li>
									<%= link_to "Logout", destroy_user_session_path, method: :delete, 'data-no-turbolink' => true %>        
								</li>
							<% else %>
								<li>
									<%= link_to "Log In", new_user_session_path, 'data-no-turbolink' => true %>  
								</li>
							<% end %>

						</ul>

						<ul class="social-icons text-right">
							<li>
								<a href="#">
									<i class="icon social_twitter"></i>
								</a>
							</li>
							
							<li>
								<a href="#">
									<i class="icon social_instagram"></i>
								</a>
							</li>
							
							<li>
								<a href="#">
									<i class="icon social_facebook"></i>
								</a>
							</li>
						</ul>

					</div>				
				</div><!--end of row-->

				<div class="mobile-toggle">
					<i class="icon icon_menu"></i>
				</div>
			</div>
			
		</nav>
	</div>
</div>


<%= yield %>

<script>
$(document).ready(function(){
    $("i").click(function(){
        $("#NavMenu").toggleClass("open-nav");
    });
});
</script>


    <script src="/assets/bootstrap.min.js"></script>
    <script src="/assets/jquery.flexslider-min.js"></script>
    <script src="/assets/smooth-scroll.min.js"></script>
    <script src="/assets/skrollr.min.js"></script>
    <script src="/assets/spectragram.min.js"></script>
    <script src="/assets/scrollReveal.min.js"></script>
    <script src="/assets/isotope.min.js"></script>
    <script src="/assets/twitterFetcher_v10_min.js"></script>
    <script src="/assets/scripts.js"></script>



</body>
</html>


